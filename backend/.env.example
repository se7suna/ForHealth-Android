# 应用配置
APP_NAME="For Health API"
APP_VERSION="1.0.0"
DEBUG=True

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=for_health

# JWT 配置
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 邮件配置（开发环境和生产环境统一使用 MailHog）
# 使用前需要先启动 MailHog: docker-compose up -d mailhog
# Web UI 地址: http://localhost:8025 (可查看所有发送的邮件和验证码)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@forhealth.com
SMTP_FROM_NAME="For Health"

# CORS 配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# 服务器配置（本地测试环境）
HOST=127.0.0.1
PORT=8000

# 图片访问配置
IMAGE_STORAGE_PATH=uploads
IMAGE_BASE_URL=/static