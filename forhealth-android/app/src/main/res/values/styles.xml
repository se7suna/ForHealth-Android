<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme -->
    <style name="Theme.ForHealth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/emerald_600</item>
        <item name="colorPrimaryVariant">@color/emerald_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/emerald_600</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:background">@color/background_primary</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextStyle">
        <!-- Base text style -->
    </style>
    
    <style name="TextStyle.Headline" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_2xl</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextStyle.Body" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextStyle.Caption" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextStyle.Small" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:textColor">@color/text_tertiary</item>
    </style>
    
    <!-- Button Styles -->
    <style name="ButtonStyle">
        <!-- Base button style -->
    </style>
    
    <style name="ButtonStyle.Primary" parent="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="backgroundTint">@color/emerald_600</item>
        <item name="cornerRadius">@dimen/card_radius_small</item>
        <item name="android:padding">@dimen/spacing_12</item>
    </style>
    
    <style name="ButtonStyle.Secondary" parent="ButtonStyle">
        <item name="android:textColor">@color/emerald_600</item>
        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="backgroundTint">@color/emerald_50</item>
        <item name="cornerRadius">@dimen/card_radius_small</item>
        <item name="android:padding">@dimen/spacing_12</item>
    </style>
    
    <!-- Card Style -->
    <style name="CardStyle">
        <!-- Base card style -->
    </style>
    
    <style name="CardStyle.Default" parent="CardStyle">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>

