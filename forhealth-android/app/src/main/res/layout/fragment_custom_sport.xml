<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingTop="@dimen/spacing_48"
                android:paddingBottom="@dimen/spacing_16"
                android:paddingStart="@dimen/spacing_24"
                android:paddingEnd="@dimen/spacing_24"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_24">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_chevron_left"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="返回"
                        android:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/create_custom_sport"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_xl"
                        android:textStyle="bold"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_24">

                <!-- Form Fields -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Sport Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运动名称"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_sm"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_8" />

                    <EditText
                        android:id="@+id/etSportName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g. 自定义跑步"
                        android:background="@drawable/bg_rounded_search_input"
                        android:padding="@dimen/spacing_12"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="@dimen/text_size_base"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_20" />

                    <!-- Calories Per Minute -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每分钟消耗卡路里 (kcal/min)"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_sm"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_8" />

                    <EditText
                        android:id="@+id/etCaloriesPerMin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="5.0"
                        android:background="@drawable/bg_rounded_search_input"
                        android:padding="@dimen/spacing_12"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="@dimen/text_size_base"
                        android:inputType="numberDecimal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/spacing_24"
        android:elevation="8dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/slate_100"
            android:layout_marginBottom="@dimen/spacing_16" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveCustomSport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_lg"
            android:textStyle="bold"
            android:paddingTop="@dimen/spacing_16"
            android:paddingBottom="@dimen/spacing_16"
            android:backgroundTint="@color/slate_800"
            app:cornerRadius="@dimen/card_radius_large" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

