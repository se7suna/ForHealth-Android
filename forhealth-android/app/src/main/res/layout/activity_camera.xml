<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Scan Overlay styled like WeChat -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutScanFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Mask areas -->
        <View
            android:id="@+id/maskTop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#66000000"
            app:layout_constraintBottom_toTopOf="@+id/scanWindow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/maskBottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#66000000"
            app:layout_constraintTop_toBottomOf="@+id/scanWindow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/maskLeft"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#66000000"
            app:layout_constraintTop_toTopOf="@+id/scanWindow"
            app:layout_constraintBottom_toBottomOf="@+id/scanWindow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/scanWindow" />

        <View
            android:id="@+id/maskRight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#66000000"
            app:layout_constraintTop_toTopOf="@+id/scanWindow"
            app:layout_constraintBottom_toBottomOf="@+id/scanWindow"
            app:layout_constraintStart_toEndOf="@+id/scanWindow"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Scan window -->
        <FrameLayout
            android:id="@+id/scanWindow"
            android:layout_width="260dp"
            android:layout_height="260dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_scan_corners" />

            <View
                android:id="@+id/scanLine"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="top"
                android:background="@color/emerald_400" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Top Bar with Mode Selection (placed above overlay) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient_top"
        android:paddingTop="@dimen/spacing_48"
        android:paddingBottom="@dimen/spacing_16"
        android:paddingStart="@dimen/spacing_24"
        android:paddingEnd="@dimen/spacing_24">

        <!-- Close Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_16">

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/close"
                app:tint="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Mode Selection Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:padding="@dimen/spacing_4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnScanMode"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫码"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_base"
                android:textStyle="bold"
                android:paddingStart="@dimen/spacing_16"
                android:paddingEnd="@dimen/spacing_16"
                android:paddingTop="@dimen/spacing_8"
                android:paddingBottom="@dimen/spacing_8"
                android:background="@android:color/transparent"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPhotoMode"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_base"
                android:textStyle="bold"
                android:paddingStart="@dimen/spacing_16"
                android:paddingEnd="@dimen/spacing_16"
                android:paddingTop="@dimen/spacing_8"
                android:paddingBottom="@dimen/spacing_8"
                android:background="@android:color/transparent"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient_bottom"
        android:padding="@dimen/spacing_24"
        android:paddingBottom="@dimen/spacing_40">

        <!-- Capture Button (Visible in both modes, but only functional in photo mode) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCapture"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/spacing_16"
            android:background="@drawable/bg_capture_button"
            android:visibility="visible"
            app:cornerRadius="36dp" />

        <!-- Hint Text -->
        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="将条形码放入框内"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_base"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/layoutLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="@color/white" />

            <TextView
                android:id="@+id/tvLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:text="识别中..."
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_base" />
        </LinearLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
