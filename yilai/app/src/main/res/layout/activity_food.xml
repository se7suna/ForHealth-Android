<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:drawableLeft="@android:drawable/ic_menu_revert"
        android:contentDescription="返回"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>


        <!-- 主标题 -->
        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="饮食记录"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="20dp"
            style="@style/ProfileText"
            android:gravity="center"/>

        <!-- 按钮：食物搜索 -->
        <Button
            android:id="@+id/btnFoodSearch"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="食物搜索"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- 按钮：手动记录食物 -->
        <Button
            android:id="@+id/btnFoodRecord"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="手动记录食物"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- 按钮：条形码扫描 -->
        <Button
            android:id="@+id/btnFoodBarcode"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="扫描条形码记录食物"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- 按钮：创建自定义食物 -->
        <Button
            android:id="@+id/btnCreateCustomFood"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="创建自定义食物"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- 按钮：创建自定义食谱 -->
        <Button
            android:id="@+id/btnCreateCustomRecipe"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="创建自定义食谱"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- 按钮：编辑/删除记录 -->
        <Button
            android:id="@+id/btnEditRecord"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="编辑/删除已记录条目"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- 按钮：记录自定义食物/谱 -->
        <Button
            android:id="@+id/btnRecordCustom"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="记录自定义食物/谱"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
