<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入食物的基础信息（所有能量单位为/份量）"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etCustomFoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="食物名称 *"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:paddingVertical="12dp" />

        <EditText
            android:id="@+id/etCustomFoodCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="分类（可选）"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:paddingVertical="12dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etCustomFoodBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="品牌（可选）"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:paddingVertical="12dp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/etCustomFoodServingSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="标准份量 (克) *"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:paddingVertical="12dp" />

            <EditText
                android:id="@+id/etCustomFoodServingUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="单位"
                android:text="克"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:paddingVertical="12dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etCustomFoodCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="热量 (千卡) *"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:paddingVertical="12dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etCustomFoodProtein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="蛋白质 (克)"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:paddingVertical="12dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etCustomFoodCarbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="碳水化合物 (克)"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:paddingVertical="12dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etCustomFoodFat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="脂肪 (克)"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:paddingVertical="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />
        <!-- 条形码标签和条形码值 -->
        <TextView
            android:id="@+id/tvBarcodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="条形码"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvBarcodeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>

