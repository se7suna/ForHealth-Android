<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 顶部标题栏 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择运动类型"
        android:textSize="18sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 搜索框 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="2dp"
        android:backgroundTint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="@color/primary_green"
                android:layout_marginStart="8dp"/>

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="搜索运动类型"
                android:textSize="16sp"
                android:background="@null"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:maxLines="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 常见运动栏 -->
    <HorizontalScrollView
        android:id="@+id/SportScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/searchCard"> <!-- 绑定到搜索框底部 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tabCommonSports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常见运动"
                android:textSize="14sp"
                android:textColor="@color/primary_green"
                android:textStyle="bold"
                android:background="@drawable/bg_category_tab_selected"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp"/>

            <LinearLayout
                android:id="@+id/tabCustomContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_category_tab_unselected"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <Button
                    android:id="@+id/tabSport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自定义"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <ImageView
                    android:id="@+id/btnAddSport"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_add_small"
                    android:tint="#666666"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 运动列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSports"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/SportScrollView"
        tools:listitem="@layout/item_sports"
        app:layout_constraintBottom_toTopOf="@id/progressBar" />

    <!-- 加载提示 -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/rvSports"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 空状态提示 -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无运动类型"
        android:textSize="14sp"
        android:textColor="#999999"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>


